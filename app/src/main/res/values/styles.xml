<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="standard_activity_margin">
        <item name="android:layout_marginTop">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginBottom">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginLeft">@dimen/activity_vertical_margin</item>
        <item name="android:layout_marginRight">@dimen/activity_horizontal_margin</item>
    </style>

    <style name="heading_one" >
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/heading_one_text_size</item>
    </style>

    <style name="heading_two" >
        <item name="android:textSize">@dimen/heading_two_text_size</item>
        <item name="android:paddingTop">@dimen/heading_two_margintop</item>
        <item name="android:paddingBottom">@dimen/heading_two_marginbottom</item>
    </style>

    <style name="heading_three" >
        <item name="android:textSize">@dimen/heading_three_text_size</item>
        <item name="android:paddingTop">@dimen/heading_three_margintop</item>
        <item name="android:paddingBottom">@dimen/heading_three_marginbottom</item>
    </style>

</resources>
