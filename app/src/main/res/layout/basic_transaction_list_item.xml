<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/transaction_list_item_amount"
        android:text="$0.00"
        android:layout_alignParentRight="true"
        style="@style/heading_three"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/transaction_list_item_date"
        android:text="date"
        style="@style/heading_three"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/transaction_list_item_name"
        android:text="name"
        android:layout_toLeftOf="@id/transaction_list_item_amount"
        android:layout_marginLeft="75dp"
        style="@style/heading_three"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


</RelativeLayout>